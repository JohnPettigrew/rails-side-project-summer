<header>
  <nav role="navigation">
    <%= link_to image_tag("logo.png", alt: "#SideProjectSummer logo, an orange blob"), root_path, id: "logo" %>
    <div id="menuToggle">
      <input type="checkbox" />
      <!-- Three spans to act as a hamburger. -->
      <span></span>
      <span></span>
      <span></span>
      <ul id="menu">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Participants", users_path %></li>
        <li><%= link_to "All projects", projects_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Your profile", user_path(current_user) %></li>
          <li class="nav-btn"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
          <li class="nav-btn"><%= link_to "Take part!", new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
