<% provide(:title, "Edit your profile") %>
<h3>Edit your profile</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label 'Your name' %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :tabindex => 1, :required => true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :tabindex => 2, :required => true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Password (leave blank if you don't want to change it)" %> <%= @minimum_password_length %> <i>characters minimum</i>
    <%= f.password_field :password, autocomplete: "new-password", :tabindex => 3 %>
    <% if @minimum_password_length %>

    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :tabindex => 4 %>
  </div>

  <div class="field action-fields submit">
    <%= f.label "Current password (to confirm your changes)" %>
    <%= f.password_field :current_password, autocomplete: "current-password", :tabindex => 5, :required => true %>
    <%= f.submit "Update", :tabindex => 6 %>
  </div>

<% end %>

<h3>Cancel your account</h3>

<div class="action-fields delete">
  <p>This function will remove your account and all your projects from this site.</p>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</div>
