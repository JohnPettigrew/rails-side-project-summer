<!-- This partial is used to *list* projects on the All Projects and User Profile pages -->
<li class="project" id="project-<%= project.id %>">
  <% if project.finished %>
    <%= image_tag("done-stamp.png", size: "71x41", alt: "Done!", class: "project-finished") %>
  <% end %>
  <p class="project-name">Project name:
    <%= link_to project.name, project_path(project.id) %>
  </p>
  <% if current_page?(project_path(project.id)) || current_page?(projects_path) %>
    <p class="project-owner"><span class="extra-space-after">Created by: </span>
      <%= link_to project.user.name||="User "+project.user.id.to_s, project.user %>
    </p>
  <% end %>
  <p class="project-description"><%= project.description %></p>
  <p class="project-listed">Listed <%= time_ago_in_words(project.created_at) %> ago.</p>
</li>
