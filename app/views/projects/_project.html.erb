<li id="project project-<%= project.id %>">
  <p class="project-name">Project name:
  <% if current_page?(action:'index') %>
    <%= link_to project.name, project_path(project.id) %>
  <% else %>
    <%= project.name %>
  <% end %></p>
  <% if current_page?(controller:'projects') %>
    <p class="project-owner">Owner: <%= link_to project.user.name||="User "+project.user.id.to_s, project.user %></p>
  <% end %>
  <p class="project-description"><%= project.description %></p>
  <% unless project.source == "" && current_page?(controller:'projects') %>
    <p class="project-source"><a href="<%= project.source %>">Source code location</a></p>
  <% end %>
  <p class="project-listed">Listed <%= time_ago_in_words(project.created_at) %> ago.</p>
</li>
